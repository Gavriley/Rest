<div class="modal fade" id="postModal" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Post</h4>
            </div>
            <div class="modal-body">
                @Html.Hidden("Id", null)
                <div class="form-group">
                    @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Type post name" })
                </div>
                <div class="form-group">
                    @Html.TextArea("Description", null, new { @class = "form-control", placeholder = "Type post description", rows = 7 })
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary pull-left" data-dismiss="modal" id="Save">
                        <span class="glyphicon glyphicon-plus"></span>&nbsp;Save
                    </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>